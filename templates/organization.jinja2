<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <title>Editor de Organização</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous" />
    <link rel="shortcut icon" href="data:image/x-icon;," type="image/x-icon">
</head>

<body>

    {% include "header.jinja2" %}

    <div class="container mb-5">
        <h1 class="display-5 text-left">Editor de Organização</h1>
    </div>
    <div class="container">

        <div class="container mb-4 ">
            <p class="h4 mb-3">Título da Organização</p>
            <form>
                <label>Nome da Organização</label><br />
                <input class="form-control"type="text" value="{{organization.Name}}"><br />

                <label>Site da Organização</label><br />
                <input class="form-control" type="text" value="{{organization.WebSite}}"><br />

                <label>Descrição da Organização</label><br />
                <input class="form-control" style="height:300px" type="text" value="{{organization.ShortDescription}}"><br />
            </form>
        </div>

        <div class="container mb-4">
            <form>
                <p class="h4">País da Organização</p>
                <input type="radio" id="{{organization.Country}}" name="Country" value="{{organization.Country}}"
                    checked>
                <label for="{{organization.Country}}">{{organization.Country}}</label>

                {% for country in countries %}
                {% if country != organization.Country %}
                <input type="radio" id="{{country}}" name="Country" value="{{country}}">
                <label for="{{country}}">{{country}}</label>
                {% endif %}
                {% endfor %}
                <br />
            </form>
        </div>

        <div class="container mb-4">
            {% if organization.Country == "Brasil" %}
            <form>
                <p class="h4">Estado da Organização</p>
                <input type="radio" id="{{organization.FederationUnity}}" name="FederationUnity"
                    value="{{organization.FederationUnity}}" checked>
                <label for="{{organization.FederationUnity}}">{{organization.FederationUnity}}</label>

                {% for federation_unity in federation_unities %}
                {% if federation_unity != organization.FederationUnity %}
                <input type="radio" id="{{federation_unity}}" name="FederationUnity" value="{{federation_unity}}">
                <label for="{{federation_unity}}">{{federation_unity}}</label>
                {% endif %}
                {% endfor %}
            </form>
            <br />
            {% endif %}
        </div>

        <div class="container mb-4">
            <form>
                <p class="h4">Aba da Organização</p>
                <input type="radio" id="{{organization.TabName}}" name="Tab" value="{{organization.TabName}}" checked>
                <label for="{{organization.TabName}}">{{organization.TabName}}</label>

                {% for tab in tabs %}
                {% if tab.Name != organization.TabName %}
                <input type="radio" id="{{tab.Name}}" name="Tab" value="{{tab.Name}}">
                <label for="{{tab.Name}}">{{tab.Name}}</label>
                {% endif %}
                {% endfor %}
                <br />
            </form>
        </div>

        <div class="container mb-4">
            <form>
                <p class="h4">Tipos da Organização</p>
                <input type="checkbox">
                <label></label>
            </form>
            <br />
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>
</body>

</html>